<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical">
	    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
		
		        <com.app.numconv.NumberPickerView
		            android:id="@+id/from1"
		            android:layout_width="@dimen/calc_np_width"
		            android:layout_height="wrap_content">
		        </com.app.numconv.NumberPickerView>
		        
		        <com.app.numconv.ClearableEditText
			        android:id="@+id/number1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:hint="@string/number">
			    </com.app.numconv.ClearableEditText>
		    
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
		
		        <com.app.numconv.NumberPickerView
		            android:id="@+id/from2"
		            android:layout_width="@dimen/calc_np_width"
		            android:layout_height="wrap_content">
		        </com.app.numconv.NumberPickerView>
		        
		        <com.app.numconv.ClearableEditText
			        android:id="@+id/number2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:hint="@string/number">
			    </com.app.numconv.ClearableEditText>
		    
		    </LinearLayout>
		</LinearLayout>
		
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical">
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="@dimen/views_margin"
    			android:layout_marginTop="@dimen/views_margin">
		
		        <Button
		            android:id="@+id/operation_plus"
		            style="@style/LeftButton"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/operation_plus" />
		        
		        <Button
		            android:id="@+id/operation_minus"
		            style="@style/SolidButton"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/operation_minus" />
		        
		        <Button
		            android:id="@+id/operation_cross"
		            style="@style/SolidButton"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/operation_cross" />
		        
		        <Button
		            android:id="@+id/operation_divide"
		            style="@style/RightButton"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="@string/operation_divide" />
		
		    </LinearLayout>
	    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content">
		
		        <com.app.numconv.NumberPickerView
		            android:id="@+id/to"
		            android:layout_width="@dimen/calc_np_width"
		            android:layout_height="wrap_content">
		        </com.app.numconv.NumberPickerView>
		        
		        <EditText
			        android:id="@+id/result"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:hint="@string/result"
			        android:layout_marginBottom="@dimen/views_margin"
    				android:layout_marginTop="@dimen/views_margin"
			        android:selectAllOnFocus="true" 
				    android:editable="false" >
			    </EditText>
		    
		    </LinearLayout>
		</LinearLayout>
	</LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <android.inputmethodservice.KeyboardView 
		android:id="@+id/keyboard"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
    
</LinearLayout>
